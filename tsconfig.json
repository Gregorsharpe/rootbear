{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "incremental": true,
    "outDir": "./dist",
    "sourceMap": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "swc": true,
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
